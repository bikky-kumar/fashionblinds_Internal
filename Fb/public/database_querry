Another table called orders;

order contains;
order_id - primary 
staff_id - foreign, 
customer_id - foreign, 
total purchased amount;

Another table called order_details;

order_detail_id primary;
customer_id  - foreign;
location - string,
blind-type- string,
blind-subtype - string,
price_calculated - decimal,