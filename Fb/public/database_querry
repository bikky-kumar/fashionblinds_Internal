//create table staff 
CREATE TABLE staff(
staff_id int NOT NULL AUTO_INCREMENT,
staff_fullname varchar(255) NOT NULL,
staff_phone varchar(255),
staff_email varchar(255),
staff_password varchar(255),
PRIMARY KEY (staff_id)
)


